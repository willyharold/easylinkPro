{% extends 'base.html.twig' %}
{% block body %}

    <!-- Preloader Start-->
    <div id="preloader">
        <div class="row loader">
            <div class="loader-icon"></div>
        </div>
    </div>
    <!-- Preloader End ici qu'il faut rajouter le menu -->

    {{ render(controller('App\\Controller\\Index\\DefaultController::menuArtisan')) }}

    <!-- Page Title START -->
    <div class="page-title-section" style="background-image: url({{ asset('img/annonce.jpg') }});">
        <div class="container">
            <h1>Devenir un artisan Pro</h1>
            <ul>
                <li><a href="{{ path('default') }}">Accueil</a></li>
                <li><a href="{{ path('fos_user_registration_artisan_register') }}">Inscription Artisan</a></li>
            </ul>
        </div>
    </div>
    <!-- Page Title END -->


    <!-- Contact Section START -->
    <link rel="stylesheet" href="{{ asset('assets/css/register.css') }}">
    <div class="section-block">
        <div class="container">
            {{ form_start(form,{'attr':{'class':"contact-form"}}) }}

            <div class="row">
                <div class="section-heading mt-10">
                    <h4>Vous etes un Artisan Pro ? Inscrivez-vous !!</h4>
                    <div class="section-heading-line-left"></div>
                </div>


                <div class="col-md-6 col-sm-6 col-xs-12">

                    <div class="contact-form-box mt-30">

                        <!-- Form START -->
                            <div class="row">

                                <fieldset class="form-group">
                                    <legend>Informations de l'entreprise</legend>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <input type="text" name="artisant_societe" value="" placeholder="Nom de l'entreprise" class="field-new" id="artisant_societe">
                                        </div>
                                        <div class="col-md-12 col-sm-12 col-xs-12">
                                            <label for="artisant_create_date_entreprise" class="ml-1 mb-0" style="color: #757575;font-size: 1.1rem;">Date de creation de l'entreprise</label>
                                            <input type="date" name="artisant_create_date_entreprise" value="" placeholder="Date de creation de l'entreprise" class="field-new" id="artisant_create_date_entreprise">
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <input type="text" name="form-fiscale" required placeholder="Numero fiscale">
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <input type="text" name="form-code_siren" required placeholder="Code siren">
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            {{ form_widget(form.adresse,{'attr':{'placeholder':"Adresse"}}) }}
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            {{ form_widget(form.codePostale,{'attr':{'placeholder':"Code postal"}}) }}
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            {{ form_widget(form.telephone,{'attr':{'placeholder':"Téléphone"}}) }}
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <input type="phone" name="form-phone2" placeholder="Téléphone 2">
                                        </div>
                                    </div>
                                </fieldset>
                                <fieldset class="form-group">
                                    <legend>Domaine d'activité</legend>
                                    <div class="row">
                                        <div class="col-md-12 col-sm-12 col-xs-12">
                                            <label for="artisant_create_date_entreprise" class="ml-1 mb-0" style="color: #757575;font-size: 1.1rem;">Choisir les categories</label>
                                            <select class="mdb-select md-form" multiple id="artisan_category">
                                                <option value="1">USA</option>
                                                <option value="2">Germany</option>
                                                <option value="3">France</option>
                                                <option value="4">Poland</option>
                                                <option value="5">Japan</option>
                                            </select>
                                        </div>
                                        <div class="col-md-12 col-sm-12 col-xs-12">
                                            <label for="artisant_create_date_entreprise" class="ml-1 mb-0" style="color: #757575;font-size: 1.1rem;">Choisir les sous categories</label>
                                            <select class="mdb-select md-form" id="artisan_sous_category" multiple>
                                                <option value="1">USA</option>
                                                <option value="2">Germany</option>
                                                <option value="3">France</option>
                                                <option value="4">Poland</option>
                                                <option value="5">Japan</option>
                                            </select>
                                        </div>

                                    </div>
                                </fieldset>

                            </div>
                        <!-- Form END -->
                    </div>
                </div>

                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="contact-form-box mt-30">
                    <fieldset class="form-group">
                        <legend>Informations Personnels</legend>
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(form.nom,{'attr':{'placeholder':"Nom"}}) }}
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(form.prenom,{'attr':{'placeholder':"Prenom"}}) }}
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                {{ form_widget(form.genre,{'attr':{'placeholder':"Genre"}}) }}
                            </div>

                        </div>
                    </fieldset>
                    <fieldset class="form-group">
                        <legend>Creation de Compte</legend>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                {{ form_widget(form.email,{'attr':{'placeholder':"Email"}}) }}
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                {{ form_widget(form.username,{'attr':{'placeholder':"Nom d'utilisateur"}}) }}
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="password" name="form-password" required placeholder="Mot de passe">
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="password" name="form-cpassword" required placeholder="Confirmez votre Mot de passe">
                            </div>
                        </div>
                    </fieldset>

                    </div>
                </div>



            </div>
            <div class="row">
                <div class="col-md-12 mb-30">
                    <div class="center-holder">
                        <button type="submit">S'inscrire</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}

        </div>
    </div>
    <!-- Contact Section END -->


    {{ render(controller('App\\Controller\\Index\\DefaultController::footer')) }}


    <!-- Scroll to top button Start -->
    <a href="#" class="scroll-to-top"><i class="fa fa-angle-up" aria-hidden="true"></i></a>
    <!-- Scroll to top button End -->

{% endblock %}
{% block script %}
<script>
    function updatesous(){
        var id = $('#form-specialite').val();

        $.ajax({
            async: true,
            url: "{{ path('specialite') }}/"+id,
            method: "GET"
           ,
            success:function(data){
                var element = document.getElementById("form-sousspecialite");
                while (element.firstChild) {
                    element.removeChild(element.firstChild);
                }
                $('#form-sousspecialite').append(data);

            },
            error:function (er) {

                var element = document.getElementById("form-sousspecialite");
                while (element.firstChild) {
                    element.removeChild(element.firstChild);
                }
            }

        });

    }
    $(document).ready(function() {
        new SlimSelect({
            select: '#artisan_category'
        })
        new SlimSelect({
            select: '#artisan_sous_category'
        })
    });
</script>
{% endblock %}