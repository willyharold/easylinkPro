{% extends 'base.html.twig' %}
{% block body %}



    <!-- Preloader Start-->
    <div id="preloader">
        <div class="row loader">
            <div class="loader-icon"></div>
        </div>
    </div>
    <!-- Preloader End ici qu'il faut rajouter le menu -->

    {{ render(controller('App\\Controller\\Index\\DefaultController::menuArtisan')) }}

    <!-- Contact Section START -->
    <div class="section-block">
        <div class="container">
            <div class="row">
                <!-- Left Side START -->
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="services-single-left-box">

                        <!-- Vertical Menu START -->
                        <div class="services-single-left-heading">
                            <h4>Mon Menu</h4>
                        </div>
                        {{ render(controller('App\\Controller\\Artisan\\ArtisanController::menu',{id:2}))}}
                        <!-- Vertical Menu END -->

                    </div>
                </div>
                <!-- Left Side END -->

                <!-- Right Side START -->
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="services-single-left-heading">
                                <h4>Annonces</h4>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <br>
                        {% for flashMessage in app.session.flashbag.get('annonce') %}
                            <div class="alert alert-success" role="alert">
                                {{ flashMessage }}
                            </div>
                        {% endfor %}

                        <table class="table table-striped table-responsive" >
                            <thead style="color: #0d6aad;">
                            <th scope="col">#</th>
                            <th scope="col">Annonce</th>
                            <th scope="col">Status</th>
                            <th scope="col">Date</th>
                            <th scope="col">Action</th>
                            </thead>
                            <tbody style="color: black;">

                            {% for annonce in pagination %}
                                <tr>
                                    <th scope="row">{{ annonce.id }}</th>
                                    <th>{{ annonce.description | slice(0,100) }}</th>
                                    <th>{{ annonce.etat }}</th>
                                    <th>{{ annonce.dateEnreg | date }}</th>
                                    <th>
                                        <a href="{{ path('artisan_annonce_view',{id:annonce.id}) }}" class="btn btn-primary"><i class="fa fa-eye"></i></a>
                                    </th>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            {# display navigation #}
                            <div class="navigation" style="float: right">
                                {{ knp_pagination_render(pagination) }}
                            </div>
                        </div>
                    </div>

                </div>

                <!-- Right Side END -->
            </div>
        </div>
    </div>
    <!-- Contact Section END -->
    {{ render(controller('App\\Controller\\Index\\DefaultController::footer')) }}
    <!-- Scroll to top button Start -->
    <a href="#" class="scroll-to-top"><i class="fa fa-angle-up" aria-hidden="true"></i></a>
    <!-- Scroll to top button End -->

{% endblock %}
{% block script %}
    <script>
        $(document).ready(function() {
            var readURL = function(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        $('.avatar').attr('src', e.target.result);
                    }

                    reader.readAsDataURL(input.files[0]);
                }
            }
            $(".file-upload").on('change', function(){
                readURL(this);
            });
        });
    </script>
{% endblock %}