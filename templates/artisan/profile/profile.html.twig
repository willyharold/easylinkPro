{% extends 'base.html.twig' %}
{% block body %}



    <!-- Preloader Start-->
    <div id="preloader">
        <div class="row loader">
            <div class="loader-icon"></div>
        </div>
    </div>
    <!-- Preloader End ici qu'il faut rajouter le menu -->

    {{ render(controller('App\\Controller\\Index\\DefaultController::menuArtisan')) }}



    <!-- Contact Section START -->
    <div class="section-block">
        <div class="container">
            <div class="row">
                <!-- Left Side START -->
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="services-single-left-box">
                        <div class="text-center contact-form-box">
                            <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
                            <h6>Upload a different photo...</h6>
                            <input type="file" class="text-center center-block file-upload">
                        </div>
                        <!-- Vertical Menu START -->
                        <div class="services-single-left-heading">
                            <h4>Mon Menu</h4>
                        </div>
                        {{ render(controller('App\\Controller\\Artisan\\ArtisanController::menu',{id:5}))}}
                        <!-- Vertical Menu END -->

                    </div>
                </div>
                <!-- Left Side END -->

                <!-- Right Side START -->
                {% block droit %}
                            <div class="col-sm-3"><!--left col-->
                               </hr><br>
                                <div class="panel panel-default">
                                    <div class="panel-heading">Website <i class="fa fa-link fa-1x"></i></div>
                                    <div class="panel-body"><a href="http://bootnipets.com">bootnipets.com</a></div>
                                </div>
                            </div><!--/col-3-->
                            <div class="col-sm-6">
                                <ul class="nav nav-tabs">
                                    <li class="active"><a data-toggle="tab" href="#entreprise">Informations de l'entreprise</a></li>
                                    <li><a data-toggle="tab" href="#activite">Domaine d'activité</a></li>
                                    <li><a data-toggle="tab" href="#personel">Informations Personnels</a></li>
                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane active" id="entreprise">
                                        <hr>
                                        <form class="form contact-form-box" action="#" method="post" id="registrationForm">

                                            <div class="row">
                                                <div class="col-md-12">
                                                    <input type="text" name="artisant_societe" value="" placeholder="Nom de l'entreprise" class="field-new" id="artisant_societe">
                                                </div>
                                                <div class="col-md-12 col-sm-12 col-xs-12">
                                                    <label for="artisant_create_date_entreprise" class="ml-1 mb-0" style="color: #757575;font-size: 1.1rem;">Date de creation de l'entreprise</label>
                                                    <input type="date" name="artisant_create_date_entreprise" value="" placeholder="Date de creation de l'entreprise" class="field-new" id="artisant_create_date_entreprise">
                                                </div>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    <input type="text" name="form-fiscale" required placeholder="Numero fiscale">
                                                </div>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    <input type="text" name="form-code_siren" required placeholder="Code siren">
                                                </div>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    {{ form_widget(form.adresse,{'attr':{'placeholder':"Adresse"}}) }}
                                                </div>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    {{ form_widget(form.codePostale,{'attr':{'placeholder':"Code postal"}}) }}
                                                </div>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    {{ form_widget(form.telephone,{'attr':{'placeholder':"Téléphone"}}) }}
                                                </div>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    <input type="phone" name="form-phone2" placeholder="Téléphone 2">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-xs-12">
                                                    <br>
                                                    <button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Save</button>
                                                </div>
                                            </div>
                                        </form>
                                        <hr>
                                    </div><!--/tab-pane-->
                                    <div class="tab-pane" id="activite">
                                        <h2></h2>
                                        <hr>
                                        <form class="form contact-form-box" action="#" method="post" id="registrationForm">
                                                <div class="row">
                                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                                        <label for="artisant_create_date_entreprise" class="ml-1 mb-0" style="color: #757575;font-size: 1.1rem;">Choisir les categories</label>
                                                        <select class="mdb-select md-form" multiple id="artisan_category">
                                                            <option value="1">USA</option>
                                                            <option value="2">Germany</option>
                                                            <option value="3">France</option>
                                                            <option value="4">Poland</option>
                                                            <option value="5">Japan</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                                        <label for="artisant_create_date_entreprise" class="ml-1 mb-0" style="color: #757575;font-size: 1.1rem;">Choisir les sous categories</label>
                                                        <select class="mdb-select md-form" id="artisan_sous_category" multiple>
                                                            <option value="1">USA</option>
                                                            <option value="2">Germany</option>
                                                            <option value="3">France</option>
                                                            <option value="4">Poland</option>
                                                            <option value="5">Japan</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                <div class="col-xs-12">
                                                    <br>
                                                    <button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Save</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div><!--/tab-pane-->
                                    <div class="tab-pane" id="personel">
                                        <hr>
                                        <form class="form contact-form-box" action="#" method="post" id="registrationForm">
                                            <div class="row">
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    {{ form_widget(form.nom,{'attr':{'placeholder':"Nom"}}) }}
                                                </div>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    {{ form_widget(form.prenom,{'attr':{'placeholder':"Prenom"}}) }}
                                                </div>
                                                <div class="col-md-12 col-sm-12 col-xs-12">
                                                    {{ form_widget(form.genre,{'attr':{'placeholder':"Genre"}}) }}
                                                </div>

                                            </div>
                                        </form>
                                    </div>
                                </div><!--/tab-pane-->
                            </div><!--/col-9-->
                {% endblock %}
                <!-- Right Side END -->
            </div>
        </div>
    </div>
    <!-- Contact Section END -->
    {{ render(controller('App\\Controller\\Index\\DefaultController::footer')) }}
    <!-- Scroll to top button Start -->
    <a href="#" class="scroll-to-top"><i class="fa fa-angle-up" aria-hidden="true"></i></a>
    <!-- Scroll to top button End -->

{% endblock %}
{% block script %}
    <script>
        $(document).ready(function() {
            var readURL = function(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        $('.avatar').attr('src', e.target.result);
                    }

                    reader.readAsDataURL(input.files[0]);
                }
            }
            $(".file-upload").on('change', function(){
                readURL(this);
            });
        });
    </script>
{% endblock %}