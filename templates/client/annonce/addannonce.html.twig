{% extends 'base.html.twig' %}
{% block body %}



    <!-- Preloader Start-->
    <div id="preloader">
        <div class="row loader">
            <div class="loader-icon"></div>
        </div>
    </div>
    <!-- Preloader End ici qu'il faut rajouter le menu -->

    {{ render(controller('App\\Controller\\Index\\DefaultController::menu')) }}

    <!-- Navbar END -->



    <!-- Contact Section START -->
    <div class="section-block">
        <div class="container">
            <div class="row">
                <!-- Left Side START -->
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="services-single-left-box">

                        <!-- Vertical Menu START -->
                        <div class="services-single-left-heading">
                            <h4>Mon Menu</h4>
                        </div>
                        {{ render(controller("App\\Controller\\Client\\ClientController::menu",{id:2})) }}
                        <!-- Vertical Menu END -->

                    </div>
                </div>
                <!-- Left Side END -->

                <!-- Right Side START -->
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="services-single-left-heading">
                                <h4>Poster une annonce</h4>
                            </div>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="{{ path('annonce') }}" class="btn btn-info">Annuler</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="contact-form-box mt-30">
                            <!-- Form START -->
                                {{ form_start(form , {'attr': {'class': 'contact-form'}}) }}

                                <div class="row">
                                    <div class="col-md-12">
                                        <select id="form-specialite" name="form-specialite" required onchange="updatesous()" >
                                            <option value="0" >Sélectionnez une catégorie</option>
                                            {% for specialite in specialites %}
                                            <option value="{{ specialite.id }}">{{ specialite.nom }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                    <div class="col-md-12">
                                        {{ form_widget(form.sousSpectialite) }}
                                    </div>

                                    <div class="col-md-12">
                                        {{ form_widget(form.description,{'attr':{'placeholder':'Description','row': 5}}) }}
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        {{ form_widget(form.adresse,{'attr':{'placeholder':'Adresse '}}) }}
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        {{ form_widget(form.codePostale,{'attr':{'placeholder':'Code postal'}}) }}
                                    </div>


                                </div>
                                <div class="col-md-12 mb-30">
                                    <div class="center-holder">
                                        <button type="submit">Envoyer</button>
                                    </div>
                                </div>
                            <!-- Form END -->


                            {{ form_end(form) }}
                        </div>

                    </div>


                </div>


                </div>
                <!-- Right Side END -->
            </div>
        </div>
    </div>
    <!-- Contact Section END -->




    {{ render(controller('App\\Controller\\Index\\DefaultController::footer')) }}


    <!-- Scroll to top button Start -->
    <a href="#" class="scroll-to-top"><i class="fa fa-angle-up" aria-hidden="true"></i></a>
    <!-- Scroll to top button End -->

{% endblock %}
{% block script %}
    <script>
        $(document).ready(function() {
            new SlimSelect({
                select: '#annonce_sousSpectialite'
            })

        });
    </script>
{% endblock %}