{% trans_default_domain 'FOSUserBundle' %}


<!-- Contact Section START -->
<link rel="stylesheet" href="{{ asset('assets/css/register.css') }}">
<div class="section-block">
    <div class="container">
        <h2 class="text-center" id="title">Authentification</h2>
        <p class="text-center">
            <small id="passwordHelpInline" class="text-muted">Authentifiez vous pour gerer vos annonces</small>
        </p>
        <hr>
        <div class="row">

            <div class="col-md-6">

                <!-------null------>
            </div>

            <div class="col-md-1">

                <!-------null------>
            </div>

            <div class="col-md-5">

                <form role="form"  class="contact-form" action="{{ path("fos_user_security_check") }}" method="post" autocomplete="off">
                    <fieldset>
                        <div class="section-heading mt-15 text-center" >
                            <h4>Connectez-vous</h4>
                            <div class="section-heading-line"></div>
                        </div>
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                        <div class="contact-form">
                            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"  placeholder="{{ 'security.login.username'|trans }}">

                        </div>
                        <div class="contact-form">
                            <input type="password" id="password" name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}">

                        </div>
                        <div class="pull-right">
                            <a class="" href="{{ path('fos_user_resetting_request') }}"  style="color: #d21e2b !important;">Mot de passe oubli√© ?</a>

                        </div>
                        <div>
                            <button type="submit" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>

                        </div>

                    </fieldset>
                </form>
                <br>
                <p style="text-align: center">Vous n'avez pas encore de compte? <a href="{{ path('fos_user_registration_register') }}" style="color:#2193f1 !important;">Inscrivez vous!</a> </p>
            </div>
        </div>
    </div>
</div>
<!-- Contact Section END -->