{% extends 'base.html.twig' %}
{% block body %}



    <!-- Preloader Start-->
    <div id="preloader">
        <div class="row loader">
            <div class="loader-icon"></div>
        </div>
    </div>
    <!-- Preloader End ici qu'il faut rajouter le menu -->

    {{ render(controller('App\\Controller\\Index\\DefaultController::menu')) }}


    <!-- Page Title START -->
    <div class="page-title-section" style="background-image: url({{ asset('img/blog.jpg') }});">
        <div class="container">
            <h1>Blog</h1>
            <ul>
                <li><a href="{{ path('default') }}">Home</a></li>
                <li><a href="{{ path('blog') }}">Blog</a></li>
            </ul>
        </div>
    </div>

    <!-- Page Title END -->
    <!-- Blog Post START -->
    <div class="section-block">
        <div class="container">
            <div class="row">
                <!-- Left Side START -->
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <!-- Post Start -->
                    {% for articleBlog in pagination %}
                    <div class="blog-list-left">
                        <img src="{{asset('/images/article/')}}{{ articleBlog.avatar }}"
                             alt="{{ articleBlog.avatar }}"
                             height="847"
                             width="566"
                        />
                        <div class="data-box">
                            <h4>23</h4>
                            <strong>Mar</strong>
                        </div>
                        <div class="blog-title-box">
                            <h2>{{ articleBlog.titre }}</h2>
                            <span><i class="fa fa-calendar"></i>{{ articleBlog.datePub | date }}</span>
                            <span><i class="fa fa-list-ul"></i>	{{ articleBlog.categorieBlog }}</span>
                        </div>

                        <div class="blog-post-content">
                            <p>{{ articleBlog.description }}</p>
                        </div>

                        <div class="mt-15 mb-40">
                            <a href="#" class="primary-button button-md">Lire l'article</a>
                        </div>
                    </div>
                    <!-- Post End -->
                    {% endfor %}

                    {# display navigation #}
                    <div class="navigation" style="float: right">
                        {{ knp_pagination_render(pagination) }}
                    </div>

                </div>
                <!-- Left Side END -->

                <!-- Right Side START -->
                {{ render(controller('App\\Controller\\Index\\DefaultController::rightblog')) }}

                <!-- Right Side END -->
            </div>
        </div>
    </div>
    <!-- Blog Post END -->





    {{ render(controller('App\\Controller\\Index\\DefaultController::footer')) }}


    <!-- Scroll to top button Start -->
    <a href="#" class="scroll-to-top"><i class="fa fa-angle-up" aria-hidden="true"></i></a>
    <!-- Scroll to top button End -->

{% endblock %}

{% block script %}

{% endblock %}