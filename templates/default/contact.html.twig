{% extends 'base.html.twig' %}
{% block body %}



    <!-- Preloader Start-->
    <div id="preloader">
        <div class="row loader">
            <div class="loader-icon"></div>
        </div>
    </div>
    <!-- Preloader End ici qu'il faut rajouter le menu -->

    {{ render(controller('App\\Controller\\Index\\DefaultController::menu')) }}

    <!-- Page Title START -->
    <div class="page-title-section" style="background-image: url(http://via.placeholder.com/1520x290);">
        <div class="container">
            <h1>Nos contacts</h1>
            <ul>
                <li><a href="{{ path('default') }}">Accueil</a></li>
                <li><a href="{{ path('contact') }}">Contact</a></li>
            </ul>
        </div>
    </div>
    <!-- Page Title END -->


    <!-- Contact Section START -->
    <div class="section-block-grey">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="contact-box">
                        <i class="fa fa-phone-square"></i>
                        <h4>Call Us</h4>
                        <span>+123 456-78900</span>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="contact-box">
                        <i class="fa fa-map"></i>
                        <h4>Visit Us</h4>
                        <span>New York, NY Sheram 113</span>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="contact-box">
                        <i class="fa fa-envelope"></i>
                        <h4>Mail Us</h4>
                        <span>specthemes@gmail.com</span>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="contact-box">
                        <i class="fa fa-comments-o"></i>
                        <h4>Live Chat</h4>
                        <span>Chat with Us 24/7</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Contact Section END -->


    <!-- Contact Form Section START -->
    <div class="section-block">
        <div class="container">
            <div class="section-heading center-holder">
                <span>Get in Touch</span>
                <h3>Let's Talk about Your Business</h3>
                <div class="section-heading-line"></div>
            </div>
            <div class="row mt-50">
                <div class="contact-form-box">
                    <!-- Form Start -->
                    <form class="contact-form">
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" name="name" placeholder="Name">
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="email" name="email" placeholder="E-mail">
                        </div>

                        <div class="col-md-12">
                            <input type="text" name="subject" placeholder="Subject">
                        </div>

                        <div class="col-md-12">
                            <textarea name="message" placeholder="Message"></textarea>
                        </div>
                        <div class="col-md-12">
                            <div class="center-holder">
                                <button type="submit">Send Message</button>
                            </div>
                        </div>
                    </form>
                    <!-- Form End -->
                </div>
            </div>
        </div>
    </div>
    <!-- Contact Form Section END -->

    {{ render(controller('App\\Controller\\Index\\DefaultController::footer')) }}


    <!-- Scroll to top button Start -->
    <a href="#" class="scroll-to-top"><i class="fa fa-angle-up" aria-hidden="true"></i></a>
    <!-- Scroll to top button End -->

{% endblock %}
