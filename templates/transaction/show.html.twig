{% extends 'template.html.twig' %}
{% block title %}Transaction{% endblock %}
{% block body %}
<div class="page-inner mt--5">
					<div class="row">
						<div class="col-md-12">
							<div class="card">
								<div class="card-header">
									<div class="card-title">Consulter Transaction</div>
									<div class="card-category">Finance > Transaction > Consulter</div>
								</div>
   <div class="card-body">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transaction.id }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ transaction.prix }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ transaction.numero }}</td>
            </tr>
            <tr>
                <th>DateEn</th>
                <td>{{ transaction.dateEn ? transaction.dateEn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ transaction.start ? transaction.start|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ transaction.end ? transaction.end|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ transaction.status }}</td>
            </tr>
            <tr>
                <th>Token</th>
                <td>{{ transaction.token }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ transaction.amount }}</td>
            </tr>
            <tr>
                <th>Response</th>
                <td>{{ transaction.response ? transaction.response|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>
</div>
    <div class="card-action">
        <div class="row">
            <div class="col-md-12">
                <a href="{{ path('transaction_index') }}" class="btn btn-primary" >back to list</a>

                <a href="{{ path('transaction_edit', {'id': transaction.id}) }}" class="btn btn-warning" ><i class="fa fa-edit"></i> Modifier</a>
            </div>										
        </div>
    </div>
   

