{% extends 'template.html.twig' %}
{% block title %}Coupon{% endblock %}
{% block body %}
<div class="page-inner mt--5">
					<div class="row">
						<div class="col-md-12">
							<div class="card">
								<div class="card-header">
									<div class="card-title">Consulter coupon</div>
									<div class="card-category">Finance > Client > Consulter</div>
								</div>
   <div class="card-body">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ coupon.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ coupon.code }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ coupon.number }}</td>
            </tr>
            <tr>
                <th>Reduction</th>
                <td>{{ coupon.reduction }}</td>
            </tr>
            <tr>
                <th>DateEn</th>
                <td>{{ coupon.dateEn ? coupon.dateEn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateExp</th>
                <td>{{ coupon.dateExp ? coupon.dateExp|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ coupon.etat ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
</div>
    <div class="card-action">
        <div class="row">
            <div class="col-md-12">
                <a href="{{ path('coupon_index') }}" class="btn btn-primary" >back to list</a>

                <a href="{{ path('coupon_edit', {'id': coupon.id}) }}" class="btn btn-warning" ><i class="fa fa-edit"></i> Modifier</a>
            </div>										
        </div>
    </div>
   

