{% extends 'template.html.twig' %}
{% block title %}Client{% endblock %}
{% block body %}
<div class="page-inner mt--5">
					<div class="row">
						<div class="col-md-12">
							<div class="card">
								<div class="card-header">
									<div class="card-title">Consulter Client</div>
									<div class="card-category">Paramètres > Client > Consulter</div>
								</div>
   <div class="card-body">
    <table class="table">
        <tbody>
            <tr>
                <th>RandomId</th>
                <td>{{ client.randomId }}</td>
            </tr>
            <tr>
                <th>RedirectUris</th>
                <td>{{ client.redirectUris ? client.redirectUris|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Secret</th>
                <td>{{ client.secret }}</td>
            </tr>
            <tr>
                <th>AllowedGrantTypes</th>
                <td>{{ client.allowedGrantTypes ? client.allowedGrantTypes|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ client.name }}</td>
            </tr>
        </tbody>
    </table>
</div>
    <div class="card-action">
        <div class="row">
            <div class="col-md-12">
                <a href="{{ path('client_index') }}" class="btn btn-primary" ><i class="fa fa-arrow-circle-left"></i> Retourner à la liste</a>

                <a href="{{ path('client_edit', {'id': client.id}) }}" class="btn btn-warning" ><i class="fa fa-edit"></i> Modifier</a>
            </div>										
        </div>
    </div>
   

    {{ include('client/_delete_form.html.twig') }}


									
								
							</div>
						</div>
					</div>
					
				</div>
			
{% endblock %}
