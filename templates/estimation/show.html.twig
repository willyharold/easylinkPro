{% extends 'template.html.twig' %}
{% block title %}Estimation{% endblock %}
{% block body %}
<div class="page-inner mt--5">
					<div class="row">
						<div class="col-md-12">
							<div class="card">
								<div class="card-header">
									<div class="card-title">Consulter Estimation</div>
									<div class="card-category">Devis/Annonce > Estimation > Consulter</div>
								</div>
   <div class="card-body">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ estimation.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ estimation.titre }}</td>
            </tr>
            <tr>
                <th>DateEn</th>
                <td>{{ estimation.dateEn ? estimation.dateEn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ estimation.etat }}</td>
            </tr>
            <tr>
                <th>TypeBien</th>
                <td>{{ estimation.typeBien }}</td>
            </tr>
            <tr>
                <th>DebutTravaux</th>
                <td>{{ estimation.debutTravaux }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ estimation.ville }}</td>
            </tr>
            <tr>
                <th>Addresse</th>
                <td>{{ estimation.addresse }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ estimation.description }}</td>
            </tr>
            <tr>
                <th>Codepostal</th>
                <td>{{ estimation.codepostal }}</td>
            </tr>
            
            <tr>
                <th>Image</th>
                <td><img src="{{asset('/images/estimation/')}}{{ estimation.image }}"
                                        alt="{{ estimation.image }}"
                                        height="80"
                                        width="110"
                    /></td>
            </tr>
        </tbody>
    </table>
</div>
    <div class="card-action">
        <div class="row">
            <div class="col-md-12">
                <a href="{{ path('estimation_index') }}" class="btn btn-primary" ><i class="fa fa-arrow-circle-left"></i> Retourner Ã  la liste</a>

                <a href="{{ path('estimation_edit', {'id': estimation.id}) }}" class="btn btn-warning" ><i class="fa fa-edit"></i> Modifier</a>
            </div>										
        </div>
    </div>
   

    {{ include('estimation/_delete_form.html.twig') }}


									
								
							</div>
						</div>
					</div>
					
				</div>
			
{% endblock %}
