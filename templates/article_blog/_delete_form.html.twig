<form method="post" action="{{ path('article_blog_delete', {'id': article_blog.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article_blog.id) }}">
    <button class="btn btn-danger"><i class="fa fa-trash"></i> Delete</button>
</form>
