{% extends 'template.html.twig' %}
{% block title %}Spécialité{% endblock %}
{% block body %}
<div class="page-inner mt--5">
					<div class="row">
						<div class="col-md-12">
							<div class="card">
								<div class="card-header">
									<div class="card-title">Consulter Catégorie</div>
									<div class="card-category">Paramètres > Catégorie > Consulter</div>
								</div>
   <div class="card-body">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ specialite.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ specialite.nom }}</td>
            </tr>
            <tr>
                <th>DesCourte</th>
                <td>{{ specialite.desCourte }}</td>
            </tr>
            <tr>
                <th>DesLongue</th>
                <td>{{ specialite.desLongue }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ specialite.code }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{asset('/images/specialite/')}}{{ specialite.image }}"
                                        alt="{{ specialite.image }}"
                                        height="80"
                                        width="110"
                    /></td>
            </tr>
        </tbody>
    </table>
</div>
    <div class="card-action">
        <div class="row">
            <div class="col-md-12">
                <a href="{{ path('specialite_index') }}" class="btn btn-primary" ><i class="fa fa-arrow-circle-left"></i> Retourner à la liste</a>

                <a href="{{ path('specialite_edit', {'id': specialite.id}) }}" class="btn btn-warning" ><i class="fa fa-edit"></i> Modifier</a>
            </div>										
        </div>
    </div>
   

    {{ include('specialite/_delete_form.html.twig') }}


									
								
							</div>
						</div>
					</div>
					
				</div>
			
{% endblock %}
